{
  "name": "nestjs-lambda-aws-cdk-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm -F @marvel/application start:dev",
    "build": "pnpm -F @marvel/application build",
    "deploy": "pnpm -F @marvel/infrastructure deploy",
    "destroy": "pnpm -F @marvel/infrastructure destroy",
    "clean": "pnpm -r exec rimraf \"{out,cdk.out,node_modules,dist}\" && rimraf node_modules",
    "prettier": "prettier --write 'packages/**/*.{ts,tsx,js}'"
  },
  "devDependencies": {
    "concurrently": "^7.2.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2"
  }
}
